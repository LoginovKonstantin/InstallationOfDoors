<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Result"
        android:id="@+id/textViewResult"
        android:textSize="20sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Высота двери:"
                android:id="@+id/textViewHeightDoor"
                android:textSize="15sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Высота вставки:"
                android:id="@+id/textViewInstHeight"
                android:layout_column="1"
                android:textSize="15sp"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ширина двери:"
                android:id="@+id/textViewWidthDoor"
                android:textSize="15sp"
                android:layout_weight="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ширина вставки:"
                android:id="@+id/textViewInstWidth"
                android:layout_column="1"
                android:textSize="15sp"
                android:layout_weight="1" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Вид двери"
                android:id="@+id/textView3"
                android:layout_marginTop="15sp"
                android:textSize="20sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Без расстекловки"
                android:id="@+id/radioButton"
                android:checked="false"
                android:layout_marginTop="10sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Свободная"
                android:id="@+id/radioButton2"
                android:checked="false"
                android:layout_marginTop="5sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/2-1/2"
                android:id="@+id/radioButton3"
                android:checked="false"
                android:layout_marginTop="5sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/3-1/3-1/3"
                android:id="@+id/radioButton4"
                android:checked="false"
                android:layout_marginTop="5sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/4-1/2-1/4"
                android:id="@+id/radioButton5"
                android:checked="false"
                android:layout_marginTop="5sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/4-1/4-1/4-1/4"
                android:id="@+id/radioButton6"
                android:checked="false"
                android:layout_marginTop="5sp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/5-1/5-1/5-1/5-1/5"
                android:id="@+id/radioButton7"
                android:checked="false"
                android:layout_marginTop="5sp" />

        </RadioGroup>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10sp"></LinearLayout>

    </LinearLayout>

</LinearLayout>